#!/bin/bash
set -ex

sudo steamos-readonly disable
sudo pacman-key --init
sudo pacman-key --populate
sudo pacman -q --cachedir=/tmp -Sy
sudo pacman -q --cachedir=/tmp -Sw --noconfirm gocryptfs
tar -xvf /tmp/gocryptfs-*.pkg.tar.zst -C ~/.local/bin/ --strip-components=2 usr/bin
~/.local/bin/gocryptfs --version
sudo rm -f /tmp/gocryptfs*.pkg.*
sudo steamos-readonly enable
